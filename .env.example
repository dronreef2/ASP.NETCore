# Copia do .env para configuração de exemplo
# Renomeie para .env e configure com seus valores

# === API Keys ===
ANTHROPIC_API_KEY=sk-ant-api03-your-key-here
OPENAI_API_KEY=sk-your-openai-key-here  # Opcional para futuras integrações
LLAMAINDEX_API_KEY=llx-your-llamaindex-key-here  # Para RAG e embeddings

# === Database ===
POSTGRES_URL=postgresql://tutor:copiloto123@localhost:5432/tutordb
REDIS_URL=redis://localhost:6379  # Para desenvolvimento local, ou redis://user:password@host:port para Redis Cloud

# === Servidor ===
PORT=8080
HOST=0.0.0.0
NODE_ENV=development

# === Observabilidade ===
OTEL_EXPORTER_OTLP_ENDPOINT=http://localhost:4317
LOG_LEVEL=debug
ENABLE_METRICS=true

# === Configurações IA ===
DEFAULT_MODEL=claude-3-5-sonnet-20241022
FALLBACK_MODEL=claude-3-haiku-20240307
MAX_TOKENS=4096
TEMPERATURE=0.7

# === Configurações Educacionais ===
DEFAULT_USER_LEVEL=intermediate
DEFAULT_PERSONA=tutor
DEFAULT_COST_MODE=deep-analysis
ENABLE_ANTI_CHEAT=true
SESSION_TIMEOUT_MINUTES=60

# === Segurança ===
JWT_SECRET=your-super-secret-jwt-key-change-this
CORS_ORIGINS=http://localhost:3000,http://localhost:5173,vscode-webview://*
RATE_LIMIT_PER_MINUTE=100

# === Features Flags ===
ENABLE_RAG=true
ENABLE_TOOL_EXECUTION=true
ENABLE_CODE_ANALYSIS=true
ENABLE_TEST_GENERATION=true
ENABLE_ASSESSMENT=true

# === Performance ===
CACHE_TTL_SECONDS=3600
MAX_CONCURRENT_TOOLS=5
TOOL_TIMEOUT_SECONDS=120

# === VS Code Extension ===
VSCODE_DEV_MODE=true
VSCODE_API_URL=http://localhost:8080

# === Web SPA ===
REACT_APP_API_URL=http://localhost:8080
REACT_APP_WS_URL=ws://localhost:8080
