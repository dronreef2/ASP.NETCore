{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning",
      "Microsoft.EntityFrameworkCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "ConnectionStrings": {
    "DefaultConnection": "Data Source=tutorcopiloto.db",
    "Redis": "localhost:6379"
  },
  "JWT": {
    "SecretKey": "DefaultSecretKeyForDevelopmentOnlyNotForProduction2024!@#$",
    "Issuer": "TutorCopiloto",
    "Audience": "TutorCopiloto-Users",
    "ExpiryInHours": 24
  },
  "CORS": {
    "Origins": "http://localhost:3000,http://localhost:5173,vscode-webview://*"
  },
  "Features": {
    "EnableSwagger": true,
    "EnableDetailedErrors": true,
    "EnableSensitiveDataLogging": false
  },
  "AI": {
    "Claude": {
      "ApiKey": "",
      "BaseUrl": "https://api.anthropic.com/v1",
      "Model": "claude-3-haiku-20240307",
      "MaxTokens": 1000,
      "Temperature": 0.7
    }
  },
  "Cache": {
    "DefaultTTLMinutes": 60,
    "EnableDistributedCache": true
  },
  "SignalR": {
    "KeepAliveIntervalSeconds": 15,
    "ClientTimeoutSeconds": 60,
    "EnableDetailedErrors": true
  },
  "Ngrok": {
    "AutoStart": true,
    "Port": 5000,
    "ConfigPath": "/workspaces/ASP.NETCore/ngrok.yml",
    "EndpointName": "tutor-copiloto-aspnet"
  },
  "GitHub": {
    "WebhookSecret": ""
  },
  "Deployment": {
    "BaseUrl": "https://deploy.tutorcopiloto.com"
  }
}
