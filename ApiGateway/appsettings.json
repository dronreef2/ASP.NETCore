{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "ReverseProxy": {
    "Routes": {
      "defaultRoute": {
        "ClusterId": "defaultCluster",
        "Match": {
          "Path": "/api/{**catch-all}"
        }
      },
      "healthRoute": {
        "ClusterId": "defaultCluster",
        "Match": {
          "Path": "/health/{**catch-all}"
        }
      },
      "deploymentsWebRoute": {
        "ClusterId": "defaultCluster",
        "Match": {
          "Path": "/deployments/{**catch-all}"
        }
      },
      "webhookApiRoute": {
        "ClusterId": "defaultCluster",
        "Match": {
          "Path": "/api/webhook/{**catch-all}"
        }
      },
      "githubReposRoute": {
        "ClusterId": "githubCluster",
        "Match": {
          "Path": "/github/repos/{**catch-all}"
        },
        "Transforms": [
          {
            "RequestHeader": "Authorization",
            "Set": "Bearer {token}"
          },
          {
            "RequestHeader": "Accept",
            "Set": "application/vnd.github.v3+json"
          },
          {
            "RequestHeader": "User-Agent",
            "Set": "ApiGateway/1.0"
          }
        ]
      },
      "githubIssuesRoute": {
        "ClusterId": "githubCluster",
        "Match": {
          "Path": "/github/issues/{**catch-all}"
        },
        "Transforms": [
          {
            "RequestHeader": "Authorization",
            "Set": "Bearer {token}"
          },
          {
            "RequestHeader": "Accept",
            "Set": "application/vnd.github.v3+json"
          },
          {
            "RequestHeader": "User-Agent",
            "Set": "ApiGateway/1.0"
          }
        ]
      },
      "diagnosticsRoute": {
        "ClusterId": "diagnosticsCluster",
        "Match": {
          "Path": "/diagnostics/{**catch-all}"
        }
      },
      "metricsRoute": {
        "ClusterId": "diagnosticsCluster",
        "Match": {
          "Path": "/metrics/{**catch-all}"
        }
      }
    },
    "Clusters": {
      "defaultCluster": {
        "Destinations": {
          "destination1": {
            "Address": "http://localhost:5000"
          }
        }
      },
      "githubCluster": {
        "Destinations": {
          "github1": {
            "Address": "https://api.github.com"
          }
        }
      },
      "diagnosticsCluster": {
        "Destinations": {
          "diagnostics1": {
            "Address": "http://localhost:5001"
          }
        }
      }
    }
  }
}
