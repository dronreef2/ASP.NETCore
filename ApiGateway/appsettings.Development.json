{
  "Logging": {
    "LogLevel": {
      "Default": "Debug",
      "Microsoft.AspNetCore": "Information",
      "Yarp": "Debug"
    }
  },
  "ReverseProxy": {
    "Routes": [
      {
        "RouteId": "backendApiRoute",
        "ClusterId": "backendCluster",
        "Match": {
          "Path": "/api/{**catch-all}"
        }
      },
      {
        "RouteId": "backendHealthRoute",
        "ClusterId": "backendCluster",
        "Match": {
          "Path": "/health/{**catch-all}"
        }
      },
      {
        "RouteId": "signalrRoute",
        "ClusterId": "backendCluster",
        "Match": {
          "Path": "/chathub/{**catch-all}"
        }
      },
      {
        "RouteId": "swaggerRoute",
        "ClusterId": "backendCluster",
        "Match": {
          "Path": "/swagger/{**catch-all}"
        }
      }
    ],
    "Clusters": {
      "backendCluster": {
        "Destinations": {
          "backend1": {
            "Address": "http://localhost:5000"
          }
        }
      }
    }
  }
}
