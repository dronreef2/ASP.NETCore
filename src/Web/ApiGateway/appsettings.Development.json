{
  "Logging": {
    "LogLevel": {
      "Default": "Debug",
      "Microsoft.AspNetCore": "Information",
      "Yarp": "Debug"
    }
  },
  "ReverseProxy": {
    "Routes": {
      "backendApiRoute": {
        "ClusterId": "backendCluster",
        "Match": {
          "Path": "/api/{**catch-all}"
        }
      },
      "backendHealthRoute": {
        "ClusterId": "backendCluster",
        "Match": {
          "Path": "/health/{**catch-all}"
        }
      },
      "signalrRoute": {
        "ClusterId": "backendCluster",
        "Match": {
          "Path": "/chathub/{**catch-all}"
        }
      },
      "swaggerRoute": {
        "ClusterId": "backendCluster",
        "Match": {
          "Path": "/swagger/{**catch-all}"
        }
      },
      "deploymentsWebRoute": {
        "ClusterId": "backendCluster",
        "Match": {
          "Path": "/deployments/{**catch-all}"
        }
      },
      "webhookApiRoute": {
        "ClusterId": "backendCluster",
        "Match": {
          "Path": "/api/webhook/{**catch-all}"
        }
      },
      "githubReposRoute": {
        "ClusterId": "githubCluster",
        "Match": {
          "Path": "/github/repos/{**catch-all}"
        },
        "Transforms": [
          {
            "RequestHeader": "Authorization",
            "Set": "Bearer {token}"
          },
          {
            "RequestHeader": "Accept",
            "Set": "application/vnd.github.v3+json"
          },
          {
            "RequestHeader": "User-Agent",
            "Set": "ApiGateway/1.0"
          }
        ]
      },
      "githubIssuesRoute": {
        "ClusterId": "githubCluster",
        "Match": {
          "Path": "/github/issues/{**catch-all}"
        },
        "Transforms": [
          {
            "RequestHeader": "Authorization",
            "Set": "Bearer {token}"
          },
          {
            "RequestHeader": "Accept",
            "Set": "application/vnd.github.v3+json"
          },
          {
            "RequestHeader": "User-Agent",
            "Set": "ApiGateway/1.0"
          }
        ]
      },
      "githubPullsRoute": {
        "ClusterId": "githubCluster",
        "Match": {
          "Path": "/github/pulls/{**catch-all}"
        },
        "Transforms": [
          {
            "RequestHeader": "Authorization",
            "Set": "Bearer {token}"
          },
          {
            "RequestHeader": "Accept",
            "Set": "application/vnd.github.v3+json"
          },
          {
            "RequestHeader": "User-Agent",
            "Set": "ApiGateway/1.0"
          }
        ]
      },
      "diagnosticsRoute": {
        "ClusterId": "diagnosticsCluster",
        "Match": {
          "Path": "/diagnostics/{**catch-all}"
        }
      },
      "metricsRoute": {
        "ClusterId": "diagnosticsCluster",
        "Match": {
          "Path": "/metrics/{**catch-all}"
        }
      },
      "healthcheckRoute": {
        "ClusterId": "diagnosticsCluster",
        "Match": {
          "Path": "/status/{**catch-all}"
        }
      }
    },
    "Clusters": {
      "backendCluster": {
        "Destinations": {
          "backend1": {
            "Address": "http://localhost:5000"
          }
        }
      },
      "githubCluster": {
        "Destinations": {
          "github1": {
            "Address": "https://api.github.com"
          }
        }
      },
      "diagnosticsCluster": {
        "Destinations": {
          "diagnostics1": {
            "Address": "http://localhost:5001"
          }
        }
      }
    }
  }
}
