@page "{id:int}"
@model TutorCopiloto.Pages.RepositoryAnalysis.DetailsModel
@{
    ViewData["Title"] = "Detalhes do Repositório";
}

<div class="container-fluid mt-4">
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header">
                    <h4 class="card-title mb-0">Detalhes do Repositório</h4>
                </div>
                <div class="card-body">
                    @if (Model.Repository != null)
                    {
                        <div class="row">
                            <div class="col-md-8">
                                <h5>@Model.Repository.Name</h5>
                                <p class="text-muted">@Model.Repository.Description</p>
                                <div class="row">
                                    <div class="col-sm-3">
                                        <strong>Linguagem:</strong><br>
                                        @Model.Repository.Language
                                    </div>
                                    <div class="col-sm-3">
                                        <strong>Stars:</strong><br>
                                        @Model.Repository.Stars
                                    </div>
                                    <div class="col-sm-3">
                                        <strong>Forks:</strong><br>
                                        @Model.Repository.Forks
                                    </div>
                                    <div class="col-sm-3">
                                        <strong>Issues:</strong><br>
                                        @Model.Repository.OpenIssues
                                    </div>
                                </div>
                            </div>
                        </div>

                        @if (Model.LatestAnalysis != null)
                        {
                            <div class="row mt-4">
                                <div class="col-12">
                                    <h6>Última Análise</h6>
                                    <div class="card">
                                        <div class="card-body">
                                            <div class="row">
                                                <div class="col-sm-3">
                                                    <strong>Data:</strong><br>
                                                    @Model.LatestAnalysis.AnalysisDate.ToString("dd/MM/yyyy HH:mm")
                                                </div>
                                                <div class="col-sm-3">
                                                    <strong>Score de Qualidade:</strong><br>
                                                    @Model.LatestAnalysis.QualityScore.ToString("F2")
                                                </div>
                                                <div class="col-sm-3">
                                                    <strong>Arquivos:</strong><br>
                                                    @Model.LatestAnalysis.FilesCount
                                                </div>
                                                <div class="col-sm-3">
                                                    <strong>Linhas de Código:</strong><br>
                                                    @Model.LatestAnalysis.TotalLinesOfCode
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        }

                        @if (Model.AnalysisHistory.Any())
                        {
                            <div class="row mt-4">
                                <div class="col-12">
                                    <h6>Histórico de Análises</h6>
                                    <div class="table-responsive">
                                        <table class="table table-striped">
                                            <thead>
                                                <tr>
                                                    <th>Data</th>
                                                    <th>Score de Qualidade</th>
                                                    <th>Arquivos</th>
                                                    <th>Linhas</th>
                                                </tr>
                                            </thead>
                                            <tbody>
                                                @foreach (var analysis in Model.AnalysisHistory)
                                                {
                                                    <tr>
                                                        <td>@analysis.AnalysisDate.ToString("dd/MM/yyyy HH:mm")</td>
                                                        <td>@analysis.QualityScore.ToString("F2")</td>
                                                        <td>@analysis.FilesCount</td>
                                                        <td>@analysis.TotalLinesOfCode</td>
                                                    </tr>
                                                }
                                            </tbody>
                                        </table>
                                    </div>
                                </div>
                            </div>
                        }
                    }
                    else
                    {
                        <div class="alert alert-warning">
                            Repositório não encontrado.
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>
